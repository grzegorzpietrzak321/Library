@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Wyświetl wszystkie";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Dodaj książkę", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tytuł
            (@Html.ActionLink("A do Z", "IndexAsc"), @Html.ActionLink("Z do A", "IndexDesc"))
        </th>
        <th>
            Autor
            (@Html.ActionLink("A do Z", "IndexAuthAsc"), Z do A)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
@Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }) |
            @Html.ActionLink("Skasuj", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<div style="text-align: right">@Html.ActionLink("Eksport", "Export") |
            @Html.ActionLink("Import", "Import") | @Html.ActionLink("Skasuj wszystko z bazy", "CleanDb")</div>
